rules_version = '2';

// See https://firebase.google.com/docs/storage/security
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the /images directory
    match /images/{userId}/{allPaths=**} {
      // Allow read access to anyone
      allow read;
      // Allow write access (create, update, delete) only if the user is authenticated
      // and the user's ID matches the {userId} path segment.
      // Also, limit file size to 5MB and ensure it's an image.
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
  }
}
