rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files.
    // This is common for files like profile pictures, event images, etc.
    // that need to be displayed publicly in the app.
    match /{allPaths=**} {
      allow read;
    }

    // Allow users to write to their own image folder.
    // This covers profile pictures, banners, etc.
    match /images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.contentType.matches('image/.*');
    }

    // Allow verified hosts to write to their own stories folder.
    // Note: We check Firestore to see if the user is a verified host.
    match /stories/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.contentType.matches('image/.*')
                   && firestore.get(/databases/(default)/documents/users/$(userId)).data.isVerifiedHost == true;
    }

    // Allow verified hosts to upload event images into a folder for their user ID.
    match /events/{userId}/{allPaths=**} {
       allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.contentType.matches('image/.*')
                   && firestore.get(/databases/(default)/documents/users/$(userId)).data.isVerifiedHost == true;
    }
  }
}
